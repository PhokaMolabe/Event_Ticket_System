{
    "name": "enterprise/event-ticketing-system",
    "description": "Enterprise Event Management and Ticketing System",
    "type": "project",
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-openssl": "*",
        "firebase/php-jwt": "^6.0",
        "stripe/stripe-php": "^13.0",
        "paypal/paypal-checkout-sdk": "^1.0",
        "phpmailer/phpmailer": "^6.8",
        "endroid/qr-code": "^4.8",
        "picqer/php-barcode-generator": "^2.4",
        "monolog/monolog": "^3.0",
        "vlucas/phpdotenv": "^5.5",
        "ramsey/uuid": "^4.7",
        "doctrine/dbal": "^3.7",
        "symfony/console": "^6.0",
        "symfony/http-foundation": "^6.0",
        "symfony/routing": "^6.0",
        "league/csv": "^9.10",
        "dompdf/dompdf": "^2.0",
        "phpoffice/phpspreadsheet": "^1.28"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "fakerphp/faker": "^1.21",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "EventTicketing\\": "src/",
            "EventTicketing\\Controllers\\": "controllers/",
            "EventTicketing\\Models\\": "models/",
            "EventTicketing\\Middleware\\": "middleware/",
            "EventTicketing\\Helpers\\": "helpers/",
            "EventTicketing\\API\\": "api/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EventTicketing\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000 public/index.php",
        "test": "phpunit",
        "migrate": "php scripts/migrate.php",
        "seed": "php scripts/seed.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
