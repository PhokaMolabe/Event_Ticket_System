# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=event_ticketing
DB_USER=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Application Configuration
APP_NAME=Event Ticketing System
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_TIMEZONE=UTC

# Security
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRY=86400
ENCRYPTION_KEY=your-32-character-encryption-key
CSRF_TOKEN_LENGTH=32

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_NAME=Event Ticketing System

# Payment Gateways
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_SANDBOX=true

# File Upload
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,csv,xlsx

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=event_ticketing_
CACHE_TTL=3600

# Session Configuration
SESSION_LIFETIME=120
SESSION_SECURE=true
SESSION_HTTPONLY=true

# Logging
LOG_LEVEL=info
LOG_MAX_FILES=30

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=1000
API_THROTTLE_REQUESTS=60

# QR Code Configuration
QR_CODE_SIZE=300
QR_CODE_MARGIN=10
QR_CODE_ERROR_CORRECTION=M

# Barcode Configuration
BARCODE_TYPE=code128
BARCODE_WIDTH=2
BARCODE_HEIGHT=50

# Currency & Tax
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,ZAR
TAX_RATE=0.15
VAT_ENABLED=true

# Check-in Configuration
CHECK_IN_TIMEOUT=30
OFFLINE_MODE_ENABLED=true
SYNC_INTERVAL=300

# Analytics & Reporting
REPORTS_RETENTION_DAYS=365
ANALYTICS_BATCH_SIZE=1000

# High Availability
LOAD_BALANCER_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Compliance
GDPR_ENABLED=true
DATA_RETENTION_YEARS=7
AUDIT_LOG_ENABLED=true
PCI_DSS_MODE=strict
